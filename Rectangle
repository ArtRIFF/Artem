
public class Rectangle {
private int height;
private int width;

public Rectangle(int height,int width){
	if(height<=0|| width<=0){
		throw new IllegalArgumentException("Illegal Argument Exception");
	}
	this.height=height;
	this.width=width;
}
public int getPerimeter(){
	return 2*(height+width);
}
public int getArea(){
	return height*width;
}
}
